{
  "name": "smart-task-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel server client",
    "start": "npm --prefix server run start",
    "build": "npm --prefix client run build",
    "client": "npm --prefix client run dev",
    "server": "npm --prefix server run dev",
    "lint": "npm-run-all lint:server lint:client",
    "lint:server": "npm --prefix server run lint",
    "lint:client": "npm --prefix client run lint",
    "test": "npm --prefix server run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}


